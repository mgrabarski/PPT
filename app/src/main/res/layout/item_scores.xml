<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_scores_root_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_color_grey_300"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_scores_left_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start|center_horizontal"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_scores_center_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_score"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/item_scores_right_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end|center_horizontal"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />
</LinearLayout>